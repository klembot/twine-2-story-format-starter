<!DOCTYPE html>
<html>
	<head>
		<title>{{STORY_NAME}}</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<%
			/* See https://github.com/jantimon/html-webpack-plugin/tree/master/examples/inline */

			if (inlineAssets) {
				assets.css.forEach(css =>
					print(`<style>${compilation.assets[css.substr(assets.publicPath.length)].source()}</style>`)
				)
			}
			%>
	</head>
	<body>
		<main></main>
		<%= storyData %>
		<%
			/* See https://github.com/jantimon/html-webpack-plugin/tree/master/examples/inline */

			if (inlineAssets) {
				assets.js.forEach(js =>
					print(`<script>${ compilation.assets[js.substr(assets.publicPath.length)].source() }</script>`)
				);
			}
		%>
	</body>
</html>